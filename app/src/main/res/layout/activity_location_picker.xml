<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.anjana.binmaster.LocationPicker"
    android:background="@drawable/background_image">


    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="64dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="52dp"
        android:text="Home premises"
        android:textColor="@android:color/white"
        app:buttonTint="@android:color/white" />

    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/radioButton"
        android:layout_alignStart="@+id/radioButton"
        android:layout_below="@+id/radioButton"
        android:layout_marginTop="21dp"
        android:text="Public/Private Enterprises"
        android:textColor="@android:color/white"
        app:buttonTint="@android:color/white" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Click on the map icon to set your location."
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="18sp"
        android:layout_below="@+id/radioButton2"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/btn_map_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/lock_clipart"
        />


    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="200dp"
        android:background="@color/colorPrimaryDark"
        android:text="Your Location:"

        android:layout_above="@+id/txtLocationView"
        android:layout_alignLeft="@+id/txtLocationView"
        android:layout_alignStart="@+id/txtLocationView" />

    <TextView
        android:id="@+id/txtLocationView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnSubmit"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        android:width="200dp"
        android:height="70dp"
        android:background="@color/colorPrimary"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:width="50dp"
        android:background="@drawable/button_shape_ovel"
        android:backgroundTint="@android:color/holo_blue_light"
        android:text="Submit"
        android:onClick="goNext"
        android:layout_marginBottom="47dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/txtLocationView"
        android:layout_alignStart="@+id/txtLocationView" />




</RelativeLayout>

